{
  "extends": [
    "plugin:@wordpress/eslint-plugin/recommended"
  ],
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "rules": {
    "no-console": "error"
  },
  "overrides": [
    {
      "files": ["gulp/**/*.js", "node/**/*.js", "*.js"],
      "env": {
        "node": true
      },
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["assets/js/**/*.js"],
      "env": {
        "browser": true
      },
      "rules": {
        "no-console": "error"
      }
    },
    {
      "files": ["**/*.jsx", "**/*.js"],
      "parser": "@babel/eslint-parser",
      "parserOptions": {
        "requireConfigFile": false,
        "babelOptions": {
          "presets": ["@babel/preset-react"]
        }
      },
      "plugins": ["react", "react-hooks"],
      "extends": [
        "plugin:react/recommended",
        "plugin:react-hooks/recommended"
      ],
      "rules": {
        "react/prop-types": "off", // Optional, falls Sie keine Prop-Types verwenden
        "react/react-in-jsx-scope": "off" // Nicht n√∂tig, wenn Sie React 17+ verwenden
      },
      "settings": {
        "react": {
          "version": "detect"
        }
      }
    },
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "parser": "@typescript-eslint/parser",
      "plugins": ["@typescript-eslint", "react", "react-hooks"],
      "extends": [
        "plugin:@wordpress/eslint-plugin/recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended"
      ],
      "parserOptions": {
        "project": "./tsconfig.json",
        "ecmaFeatures": {
          "jsx": true
        }
      },
      "settings": {
        "react": {
          "version": "detect"
        }
      }
    }
  ]
}
